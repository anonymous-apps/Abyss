{
    "name": "@abyss/prompts",
    "version": "0.0.2",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "vitest run",
        "build": "tsc && npm run build:esbuild",
        "build:esbuild": "npx esbuild src/index.ts --bundle --platform=node --target=node14 --outfile=dist/index.js --external:sqlite3",
        "watch": "concurrently \"tsc-watch --noClear\" \"npm run build:esbuild --watch\""
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "concurrently": "^9.1.2",
        "esbuild": "^0.25.4",
        "tsc-watch": "^6.2.1",
        "typescript": "^4.2.4",
        "vitest": "^3.0.9"
    }
}
