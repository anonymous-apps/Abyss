{
    "name": "@abyss/records",
    "version": "0.0.2",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "rm -rf .test-artifacts && vitest run",
        "build": "tsc && npm run build:esbuild",
        "build:esbuild": "npx esbuild src/index.ts --bundle --platform=node --target=node14 --outfile=dist/index.js --external:sqlite3",
        "watch": "concurrently \"tsc --watch\" \"npm run build:esbuild --watch\""
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "esbuild": "^0.25.4",
        "typescript": "^4.2.4",
        "vitest": "^3.0.9"
    },
    "peerDependencies": {
        "sqlite3": "^5.1.7"
    }
}
