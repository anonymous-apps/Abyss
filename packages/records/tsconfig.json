{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "dom"],
        "declaration": true,
        "outDir": "./dist/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declarationMap": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "rootDir": "./src",
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "test"]
}
