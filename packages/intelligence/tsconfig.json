{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "dom"],
        "declaration": true,
        "outDir": "./lib/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
