{
    "name": "@abyss/app",
    "version": "0.0.36",
    "description": "Abyss AI Desktop Application",
    "author": {
        "name": "A Developer!"
    },
    "main": "dist-electron/main/index.mjs",
    "type": "module",
    "scripts": {
        "dev": "npm run prisma:merge && vite",
        "drizzle": "drizzle-kit push:sqlite",
        "build:mac": "vite build && npm run prisma && electron-builder build --mac ",
        "debug:mac": "npm run build:mac && dist/mac/Abyss.app/Contents/MacOS/Abyss",
        "debug:asar": "npx asar extract dist/mac/Abyss.app/Contents/Resources/app.asar ./tmp/extracted-app",
        "publish:mac": "vite build && npm run prisma && electron-builder build --mac --publish always && npm run publish:checksums",
        "publish:checksums": "node scripts/update-checksums.cjs && node scripts/publish-new-checksums.mjs",
        "bump": "npm version patch",
        "prisma": "DATABASE_URL=file:./dev.db npm run prisma:migrate && npm run prisma:generate && npm run prisma:copy",
        "prisma:generate": "npm run prisma:merge && prisma generate",
        "prisma:migrate": "npm run prisma:merge && prisma migrate dev",
        "prisma:merge": "cd ./prisma/models && rm -rf ../schema.prisma && cat *.prisma >> ../schema.prisma && cd .. && prisma format",
        "prisma:copy": "node scripts/copy-prisma-client.cjs"
    },
    "dependencies": {
        "@abyss/intelligence": "file:../intelligence",
        "@abyss/ui-components": "file:../ui-components",
        "@aws-sdk/client-bedrock-runtime": "^3.758.0",
        "@aws-sdk/client-dynamodb": "^3.767.0",
        "@aws-sdk/client-s3": "^3.758.0",
        "@aws-sdk/lib-dynamodb": "^3.767.0",
        "@prisma/client": "^6.6.0",
        "axios": "^1.8.4",
        "date-fns": "^4.1.0",
        "electron-updater": "^6.3.9",
        "lucide-react": "^0.475.0",
        "prisma": "^6.4.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^8.0.6",
        "react-router": "^7.2.0",
        "react-router-dom": "^7.2.0",
        "react18-json-view": "^0.2.9",
        "recharts": "^2.15.2",
        "uuid": "^11.1.0",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@headlessui/tailwindcss": "^0.2.0",
        "@octokit/rest": "^21.1.1",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.20",
        "electron": "^34.2.0",
        "electron-builder": "^23.6.0",
        "js-yaml": "^4.1.0",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^6.1.1",
        "vite-plugin-electron": "^0.28.0",
        "vite-plugin-electron-renderer": "^0.14.5"
    }
}
