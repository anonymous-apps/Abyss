model Jobs {
  id         String   @id 
  references Json?    
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Name of the job
  name       String

  // Type of job (e.g., 'scheduled', 'background', 'one-time')
  type       String

  // Current status of the job (e.g., 'pending', 'running', 'completed', 'failed')
  status     String

  // Optional reference to associated text log
  textLogId  String?
} 