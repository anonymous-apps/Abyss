{
    "name": "abyss",
    "private": true,
    "workspaces": [
        "packages/app",
        "packages/ui-components",
        "packages/intelligence",
        "packages/records",
        "packages/prompts"
    ],
    "scripts": {
        "dev": "npm run dev --workspace=packages/app",
        "publish": "npm run build && npm run build:mac && npm run publish:mac",
        "publish:mac": "npm run publish:generate-icons && npm run publish:mac --workspace=packages/app",
        "publish:generate-icons": "node scripts/generate-icons.js",
        "ci": "npm-run-all lint check format test",
        "ci:app": "npm-run-all lint:app check:app format:app",
        "ci:ui": "npm-run-all lint:ui check:ui format:ui",
        "ci:records": "npm-run-all lint:records check:records format:records test:records",
        "ci:intelligence": "npm-run-all lint:intelligence check:intelligence format:intelligence test:intelligence",
        "ci:prompts": "npm-run-all lint:prompts check:prompts format:prompts test:prompts",
        "test": "npm-run-all --parallel test:records test:intelligence test:prompts",
        "test:records": "npm run test --workspace=packages/records",
        "test:intelligence": "npm run test --workspace=packages/intelligence",
        "test:prompts": "npm run test --workspace=packages/prompts",
        "format": "biome format --fix .",
        "format:app": "biome format --fix packages/app",
        "format:ui": "biome format --fix packages/ui-components",
        "format:intelligence": "biome format --fix packages/intelligence",
        "format:records": "biome format --fix packages/records",
        "format:prompts": "biome format --fix packages/prompts",
        "lint": "biome lint .",
        "lint:app": "biome lint packages/app",
        "lint:ui": "biome lint packages/ui-components",
        "lint:intelligence": "biome lint packages/intelligence",
        "lint:records": "biome lint packages/records",
        "lint:prompts": "biome lint packages/prompts",
        "check": "biome check . --write",
        "check:app": "biome check packages/app --write",
        "check:ui": "biome check packages/ui-components --write",
        "check:intelligence": "biome check packages/intelligence --write",
        "check:records": "biome check packages/records --write",
        "check:prompts": "biome check packages/prompts --write",
        "build": "npm-run-all build:ui build:records build:prompts build:intelligence",
        "build:ui": "npm run build --workspace=packages/ui-components",
        "build:intelligence": "npm run build --workspace=packages/intelligence",
        "build:records": "npm run build --workspace=packages/records",
        "build:prompts": "npm run build --workspace=packages/prompts",
        "build:mac": "npm run build:mac --workspace=packages/app && say 'Build complete'",
        "watch": "concurrently \"npm run watch:ui\" \"npm run watch:records\" ",
        "watch:ui": "npm run watch --workspace=packages/ui-components",
        "watch:app": "npm run watch --workspace=packages/app",
        "watch:intelligence": "npm run watch --workspace=packages/intelligence",
        "watch:records": "npm run watch --workspace=packages/records",
        "watch:prompts": "npm run watch --workspace=packages/prompts",
        "prepare": "husky"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.0-beta.4",
        "husky": "^9.1.7",
        "icon-gen": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "sharp": "^0.33.2"
    },
    "dependencies": {
        "@electron/notarize": "^2.5.0",
        "electron": "^36.2.0",
        "electron-notarize": "^1.2.2",
        "react-markdown": "^8.0.6"
    }
}
