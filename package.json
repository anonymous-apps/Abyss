{
    "name": "abyss",
    "private": true,
    "workspaces": [
        "packages/app",
        "packages/ui-components",
        "packages/intelligence",
        "packages/records",
        "packages/prompts"
    ],
    "scripts": {
        "build": "npm run build:ui && npm run build:records && npm run build:prompts && npm run build:intelligence",
        "build:ui": "npm run build --workspace=packages/ui-components",
        "build:intelligence": "npm run build --workspace=packages/intelligence",
        "build:records": "npm run build --workspace=packages/records",
        "build:prompts": "npm run build --workspace=packages/prompts",
        "build:mac": "node scripts/generate-icons.js && npm run build:mac --workspace=packages/app && say 'Build complete'",
        "debug:mac": "npm run debug:mac --workspace=packages/app",
        "publish": "npm run build && npm run build:mac && npm run publish:mac",
        "publish:mac": "node scripts/generate-icons.js && `npm run publish:mac --workspace=packages/app",
        "generate-icons": "node scripts/generate-icons.js",
        "bump": "npm run bump --workspace=packages/app",
        "test": "npm run test --workspace=packages/intelligence",
        "watch": "concurrently \"npm run watch --workspace=packages/ui-components\" \"npm run watch --workspace=packages/intelligence\" \"npm run watch --workspace=packages/records\" \"npm run watch --workspace=packages/prompts\"",
        "dev": "npm run dev --workspace=packages/app"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^7.6.17",
        "@storybook/addon-interactions": "^7.6.17",
        "@storybook/addon-links": "^7.6.17",
        "@storybook/addon-onboarding": "^1.0.11",
        "@storybook/blocks": "^7.6.17",
        "@storybook/builder-vite": "^7.6.17",
        "@storybook/react": "^7.6.17",
        "@storybook/react-vite": "^7.6.17",
        "@storybook/test": "^7.6.17",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^9.1.2",
        "icon-gen": "^3.0.1",
        "sharp": "^0.33.2",
        "storybook": "^7.6.17",
        "vite": "^5.1.4"
    },
    "dependencies": {
        "@electron/notarize": "^2.5.0",
        "electron": "^36.2.0",
        "electron-notarize": "^1.2.2",
        "react-markdown": "^8.0.6"
    }
}
